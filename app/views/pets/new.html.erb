<h1>Create New Pet</h1>

<%= form_tag "/pets" do %>
  <%= label_tag :image %>
  <%= text_field_tag :image %><br/>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br/>
  <%= label_tag :description %><br/>
  <%= text_area(:description, :text, size: "20x30") %><br/>
  <%= label_tag :approximate_age %>
  <%= text_field_tag :approximate_age %><br/>
  <%= label_tag :sex %>
  <%= text_field_tag :sex %><br/>

  <%= submit_tag "Create Artist" %>
<% end %>
