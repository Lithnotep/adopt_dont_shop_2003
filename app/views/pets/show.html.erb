<h1><%= @pet.name %> </h1>
<p><%= "#{@pet.image}" %></p>
<ul>
  <li><%= "Age: #{@pet.approximate_age}" %></li>
  <li><%= "Sex: #{@pet.sex}" %></li>
  <li><%= "Shelter: #{@pet.shelter.name}" %></li>
  <li><%= "Description: #{@pet.description}" %></li>
  <% if @pet.adoptable %>
  <li><%= "Status: Adoptable" %></li>
  <% else %>
  <li><%= "Status: Pending Adoption" %></li>
  <% end %>
  <li><%= button_to "Update Pet", "/pets/#{@pet.id}/edit", method: :get %></li>
  <li><%= button_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %></li>
</ul>
