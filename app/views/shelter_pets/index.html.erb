<<h1><%= @shelter.name %></h1>

<% @shelter.pets.each do |pet| %>
  <h2><%= "#{pet.name}" %> </h2>
  <p><%= "#{pet.image}" %></p>
  <ul>
    <li><%= "Age: #{pet.approximate_age}" %></li>
    <li><%= "Sex: #{pet.sex}" %></li>
    <li><%= "Sex: #{pet.description}" %></li>
    <% if pet.adoptable %>
    <li><%= "Status: Adoptable" %></li>
    <% else %>
    <li><%= "Status: Pending Adoption" %></li>
    <% end %>
  </ul>
  <% end %>

<%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new" %>
