<body>

<h1>New Shelter</h1>

<nav>
  <%= link_to "Shelters", "/shelters" %>
  <%= link_to "Pets", "/pets" %>
</nav>

<form action="/shelters" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a new shelter:</p>
  <input type='text' name='shelter[name]'/><br/>
  <input type='test' name='shelter[address]'/><br/>
  <input type='test' name='shelter[city]'/><br/>
  <input type='test' name='shelter[state]'/><br/>
  <input type='test' name='shelter[zip]'/><br/>
  <input type='submit' value='Create Shelter'/>
</form>

</body>
